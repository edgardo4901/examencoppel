@{
    ViewBag.Title = "Nuevo";
}
<div class="col-md-8 col-centered mt-4">
    <div class="card">
        <div class="card-block">
            <!--Header-->
            <div class="form-header">
                <h3 class="textWhite">Movimientos</h3>
            </div>

            <!--Body-->
            <div class="md-form">
                <input type="text" id="txtNumero" length="10" maxlength="10" class="form-control corta" onkeypress='return layautViewModel.validarNumero(event)'>
                <label for="txtNumero">Numero</label>
            </div>
            <div class="md-form">
                <input type="text" id="txtNombre" length="200" maxlength="200" class="form-control larga" readonly>
                <label for="txtNombre">Nombre</label>
            </div>
            <div style="margin-top: 2rem;">
                <div class="inlineblock">
                    <div class="md-form">
                        <label for="ddlRol" class="active lblCombo">Rol</label>
                        <select class="form-control" id="ddlRol" style="width:250px;"></select>
                    </div>
                </div>
                <div class="inlineblock">
                    <div class="md-form">
                        <label for="ddlTipo" class="active lblCombo">Tipo</label>
                        <select class="form-control" id="ddlTipo" style="width:250px;"></select>
                    </div>
                </div>
            </div>
            <div>
                <div class="md-form">
                    <i class="glyphicon glyphicon-calendar prefix"></i>
                    <input placeholder="Fecha" type="text" id="txtFecha" class="form-control datepicker">
                </div>
            </div>
            <div style="margin-top: 2rem;">
                <div class="inlineblock">
                    <div class="md-form">
                        <input type="text" id="txtCantidadEntregas" maxlength="4" class="form-control media" onkeypress='return layautViewModel.validarNumero(event)'>
                        <label for="txtCantidadEntregas">Cantidad Entregas</label>
                    </div>
                </div>
                <div id="divCubrioTurno" class="inlineblock">
                    <div class="md-form">
                        <input type="checkbox" id="cbCubrioTurno">
                        <label for="cbCubrioTurno">Cubrio Turno &nbsp;&nbsp;</label>
                    </div>
                    <div class="md-form">
                        <label for="ddlRolCubrio" class="active lblCombo">Rol Cubrio</label>
                        <select class="form-control" id="ddlRolCubrio" style="width:250px;"></select>
                    </div>
                </div>
            </div>
            <div class="text-right">
                <button id="btnEliminar" class="btn btn-primary">Eliminar</button>
                <button id="btnGuardar" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>
<script src="~/ViewModel/movimientoViewModel.js"></script>